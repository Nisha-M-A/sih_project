<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Facial Recognition App</title>
  <style>
    :root {
      --bg:#f4f7fb;   /* same as survey */
      --card:#fff;
      --accent:#0b63d8;
      --muted:#6b7280;
      --radius:12px;
      font-family:Inter, system-ui, -apple-system, "Segoe UI", Roboto, Arial;
    }

    body {
      margin: 0;
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      background: var(--bg);
      color: #0b1220;
    }

    .container {
      width: 100%;
      max-width: 750px;
      padding: 20px;
    }

    .card {
      background: var(--card);
      border-radius: var(--radius);
      padding: 28px;
      box-shadow: 0 8px 22px rgba(9,30,66,0.06);
      text-align: center;
    }

    h1 {
      margin-top: 0;
      font-size: 22px;
      font-weight: 600;
      margin-bottom: 20px;
      color: #111827;
    }

    video {
      border-radius: var(--radius);
      border: 2px solid #d1d5db;
      margin-bottom: 16px;
    }

    button {
      background: var(--accent);
      color: #fff;
      border: 0;
      padding: 10px 18px;
      border-radius: var(--radius);
      font-weight: 600;
      cursor: pointer;
      transition: background 0.2s;
    }

    button:hover {
      background: #094fae;
    }

    #result {
      margin-top: 16px;
      font-size: 14px;
      color: var(--muted);
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="card">
      <h1>Capture a Photo for Recognition</h1>

      <video id="videoElement" autoplay width="640" height="480"></video>
      <br>

      <button id="captureButton">Recognize Face</button>

      <canvas id="canvasElement" style="display: none;"></canvas>

      <div id="result"></div>
    </div>
  </div>

  <script>
    const video = document.getElementById('videoElement');
    const resultDiv = document.getElementById('result');
    const capture = document.getElementById('captureButton');

    // Start camera
    navigator.mediaDevices.getUserMedia({ video: true })
      .then(stream => {
        video.srcObject = stream;
      })
      .catch(err => {
        console.error("Error accessing the camera: ", err);
        resultDiv.innerText = "Error: Could not access the camera. Please check your permissions.";
      });

    capture.addEventListener("click", () => {
      resultDiv.innerText = "Processing...";
      setTimeout(() => {
        window.location.href = "http://localhost:8080/face_recognition/recognition_successful";
      }, 3000);
    });
  </script>
</body>
</html>
