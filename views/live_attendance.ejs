    body {
      font-family: Arial, sans-serif;
      background: #e6f2ff; /* light blue background */
      margin: 0;
      padding: 0;
      text-align: center;
    }

    form {
      margin: 20px;
      text-align: left; /* Aligns the button to the left */
    }

    button {
      background-color: #007BFF; /* blue */
      color: white;
      border: none;
      padding: 10px 20px;
      font-size: 16px;
      border-radius: 5px;
      cursor: pointer;
      transition: 0.3s;
    }

    button:hover {
      background-color: #0056b3; /* darker blue on hover */
    }

    h2 {
      color: #333;
      margin-top: 10px;
    }

    .table-container {
      background: white;
      margin: 20px auto;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0px 4px 10px rgba(0,0,0,0.1);
      max-width: 95%;
      overflow-x: auto;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      text-align: center;
    }

    th, td {
      border: 1px solid #999;
      padding: 10px;
      word-wrap: break-word;
    }

    th {
      background-color: #f2f2f2;
      font-weight: bold;
    }

    .tick {
      color: green;
      font-size: 20px;
      font-weight: bold;
    }

    tr:nth-child(even) {
      background-color: #fafafa;
    }
  </style>
</head>
